{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",         // ? allows import.meta
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "vite.ts", "routes.ts", "storage.ts"],
  "exclude": ["../client", "../vite.config.ts", "dist"]
}